extends layout 
 
block content 
  h1= title 
 
  - let garrettCarsid = toShow._id 
  - let carName = toShow.carName 
  - let carModel = toShow.carModel 
  - let cost = toShow.cost 
   
  div.row(class='mb-2') 
    div.mr-1 ID is 
    div #{garrettCarsid} 
  - let actionid = "/resource/garrettCars/" + garrettCarsid 
  form(id='garrettCarsForm', action= actionid, method="PUT") 
    div.form-group 
        label.garrettCarsAttr(for='carName') Car Name
        input#carName(type='text', name='carName', value= carName ) 
    div.form-group 
        label.garrettCarsAttr(for='carModel') Car Model
        input#carModel(type='text', name='carModel', value= carModel ) 
    div.form-group 
        label.garrettCarsAttr(for='cost') Cost 
        input#cost(type='number', name='cost', value=cost ) 
    input(type="submit") 
 
  script. 
    document.forms['garrettCarsForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'PUT', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Update succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Update failed " + error ) 
      }); 
    }); 